<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Video Title">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sc_black"
        android:id="@+id/et_inspire_title1"
        />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Video Description">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/uploadVideoDescription1"
        />
</com.google.android.material.textfield.TextInputLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btn_choose_vedio1"
    android:text="CHOOSE VIDEO"
    android:fontFamily="@font/alegreya_sc_black"
    style="@style/app_Button"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="30dp"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btn_upload_vedio1"
    android:text="Upload VIDEO"
    android:fontFamily="@font/alegreya_sc_black"
    style="@style/app_Button"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    />

</LinearLayout>